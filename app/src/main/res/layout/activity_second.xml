<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="SecondBind">

        <variable
            name="time"
            type="com.bovink.androidlearing.Time"/>

        <variable
            name="handler"
            type="com.bovink.androidlearing.activity.SecondActivity.EventHandler" />

        <variable
            name="view"
            type="com.bovink.androidlearing.activity.SecondActivity" />

        <variable
            name="viewModel"
            type="com.bovink.androidlearing.SecondViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{() -> handler.setHour()}"
            android:background="@{viewModel.error?@string/string_red:@string/string_green}"
            android:text="second" />

        <com.bovink.androidlearing.CustomView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:onTimeChanged="@{() -> handler.changeTime()}"
            android:onClick="@{(theview) -> handler.clickCustom(theview)}"
            android:text="hi"
            app:hour="@{time.hour}"
            app:minute="@{time.minute}"
            app:second="@{time.second}" />

        <Button
            android:text="change one"
            android:onClick="@{() -> handler.setTime()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="change two"
            android:onClick="@{() -> handler.setHournew()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>
